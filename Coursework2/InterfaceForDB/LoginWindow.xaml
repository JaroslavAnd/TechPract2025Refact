<Window x:Class="InterfaceForDB.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceForDB"
        mc:Ignorable="d"
        Title="Авторизація" Height="370" Width="450" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="#FFFAFAFA">
    <Grid Margin="0,0,0,4">
        <!-- Тіньова підложка для центральної панелі -->
        <Border Background="White" 
                CornerRadius="10" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" Height="314">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3"/>
            </Border.Effect>
            <Grid Margin="20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

              
                <TextBlock Text="Авторизація" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>

                <TextBlock Text="Логін:" 
                           Grid.Row="1" 
                           Foreground="#555555" 
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" 
                         Grid.Row="1" 
                         Margin="0,20,0,0" 
                         Width="280" Height="30"
                         VerticalAlignment="Top" 
                         BorderBrush="#CCCCCC"
                         Padding="5"/>

                <TextBlock Text="Пароль:" 
                           Grid.Row="2" 
                           Foreground="#555555" 
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                             Grid.Row="2" 
                             Margin="0,40,0,0"
                             Width="280" Height="30" 
                             VerticalAlignment="Top"
                             BorderBrush="#CCCCCC"
                             Padding="5"/>

                <TextBlock x:Name="txtErrorMessage"
                           Grid.Row="3" 
                           FontSize="12" 
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>

                <Button x:Name="btnLogin" 
                        Content="Увійти" 
                        Grid.Row="4" 
                        Width="120" Height="35"
                        Background="#4CAF50" 
                        Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0" 
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="10,25,0,6"
                        Click="BtnLogin_Click"/>
                <Button x:Name="btnRegistration" 
                        Content="Зареєструватися" 
                        Grid.Row="4" 
                        Width="120" Height="35"
                        Background="DarkSlateBlue" 
                        Foreground="White" 
                        FontWeight="Bold"
                        BorderThickness="0" 
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="175,25,0,6"
                        Click="BtnReg_Click" RenderTransformOrigin="0.5,0.502"/>
            </Grid>
        </Border>
    </Grid>
</Window>
